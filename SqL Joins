INSERT INTO PROJECT_1 VALUES(104,4,'DEVELOPMENT')

/* INNER JOIN */

SELECT EMPLOYEE.EMP_NAME,PROJECT.DEPARTMENT
  FROM EMPLOYEE
  INNER JOIN PROJET
  ON PROJECT.EMP_ID = EMPLOYEE.EMP_ID;
  
/* LEFT JOIN */

SELECT EMPLOYEE.EMP_NAME, PROJECT.DEPARTMENT
  FROM EMPLOYEE
  LEFT JOIN PROJECT
  ON PROJECT.EMP_ID = EMPLOYEE.EMP_ID;
  
/* RIGHT JOIN */

SELECT EMPLOYEE.EMP_NAME, PROJECT.DEPARTMENT
  FROM EMPLOYEE
  RIGHT JOIN PROJECT
  ON PROJECT.EMP_ID = EMPLOYEE.EMP_ID;
  
/* FULL JOIN */

SELECT EMPLOYEE.EMP_NAME, PROJECT.DEPARTMENT
  FROM EMPLOYEE
  FULL JOIN PROJECT
  ON PROJECT.EMP_ID=EMPLOYEE.EMP_ID;
