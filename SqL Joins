/* Create Table of Name Employee */

CREATE TABLE EMPLOYEE (
  EMP_ID NUMBER(5),
  EMP_NAME VARCHAR(30),
  CITY VARCHAR(20),
  SALARY NUMBER(10),
  AGE NUMBER(3)
);

/* Inserting Data into EMPLOYEE Table */

INSERT INTO EMPLOYEE VALUES(1,'ANGELINA','CHICAGO',20000,30);
INSERT INTO EMPLOYEE VALUES(2,'AUSTIN','BERLIN',30000,26);
INSERT INTO EMPLOYEE VALUES(3,'CHRISTIAN','DENVER',40000,29);
INSERT INTO EMPLOYEE VALUES(4,'KRISTEIN','WASHINGTON',50000,36);
INSERT INTO EMPLOYEE VALUES(5,'RUSSELL','LA',80000,25);

/* TO Fetch Complete EMPLOYEE table */

SELECT * FROM EMPLOYEE;

/* Create new table of Name PROJECT

CREATE TABLE PROJECT(
  PROJ_NO NUMBER(3),
  EMP_ID NUMBER(3),
  DEPARTMENT VARCHAR(10)
);

/* Inserting Data into PROJECT Table

INSERT INTO PROJECT_1 VALUES(101,1,'TESTING');
